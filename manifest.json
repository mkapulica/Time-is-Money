{
    "manifest_version": 2,
    "name": "Price Replacer",
    "version": "1.0",
    "description": "Replaces prices on web pages",
    "permissions": ["activeTab", "webNavigation", "storage", "<all_urls>", "tabs"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["style.css"],
        "run_at": "document_idle"
      }
    ],
    "browser_action": {
      "default_icon": "icons/icon.png",
      "default_popup": "popup.html"
    }
  }
  